<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

    <RelativeLayout
            android:layout_margin="@dimen/common_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                style="@style/CustomTextView"
                android:id="@+id/all_text_view"
                android:text="@string/sound_setting_all"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"/>
        <Switch
                android:id="@+id/all_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/all_text_view"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_margin="@dimen/common_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                style="@style/CustomTextView"
                android:id="@+id/bull_text_view"
                android:text="@string/bull"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"/>
        <RelativeLayout
                android:layout_toEndOf="@+id/bull_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Switch
                    android:id="@+id/bull_effect_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:id="@+id/bull_linear_layout1"
                    android:layout_below="@+id/bull_effect_switch"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button android:id="@+id/bull_button_1" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="1" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/bull_button_2" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="2" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/bull_button_3" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="3" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/bull_button_4" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="4" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/bull_button_5" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="5" android:background="@drawable/square_button_selector"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/bull_linear_layout2"
                    android:layout_below="@+id/bull_linear_layout1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button android:id="@+id/bull_button_6" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="6" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/bull_button_7" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="7" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/bull_button_8" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="8" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/bull_button_9" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="9" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/bull_button_10" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="10" android:background="@drawable/square_button_selector"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_margin="@dimen/common_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                style="@style/CustomTextView"
                android:id="@+id/in_bull_text_view"
                android:text="@string/in_bull"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"/>
        <RelativeLayout
                android:layout_toEndOf="@+id/in_bull_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <Switch
                    android:id="@+id/in_bull_effect_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <LinearLayout
                    android:id="@+id/in_bull_linear_layout1"
                    android:layout_below="@+id/in_bull_effect_switch"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button android:id="@+id/in_bull_button_1" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="1" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/in_bull_button_2" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="2" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/in_bull_button_3" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="3" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/in_bull_button_4" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="4" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/in_bull_button_5" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="5" android:background="@drawable/square_button_selector"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/in_bull_linear_layout2"
                    android:layout_below="@+id/in_bull_linear_layout1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button android:id="@+id/in_bull_button_6" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="6" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/in_bull_button_7" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="7" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/in_bull_button_8" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="8" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/in_bull_button_9" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="9" android:background="@drawable/square_button_selector"/>
                <Button android:id="@+id/in_bull_button_10" android:layout_margin="2dp" android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="10" android:background="@drawable/square_button_selector"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
